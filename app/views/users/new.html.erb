<h1>Sign up</h1>

<div>
    <%= form_for(@user) do |f| %>

    <%= render 'shared/error_messages' %>
    
    <fieldset>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </fieldset>
    <fieldset>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </fieldset>
    <fieldset>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </fieldset>
    <fieldset>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
    </fieldset>
      <%= f.submit "Create my account" %>
    <% end %>
  </div>
</div>
